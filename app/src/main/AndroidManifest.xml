<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hdu.myship.blackstone">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".launcherActivity"
            android:theme="@style/AppTheme.No">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="design_width"
            android:value="1080" />
        <meta-data
            android:name="design_height"
            android:value="1920" />

        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".PersonCenterActivity" />
        <activity android:name=".SpeciesDeatailedActivity" />
        <activity android:name=".SpeciesClassActivity" />
        <activity android:name=".AccountAndSecurityActivity" />
        <activity android:name=".PersonInformationActivity" />
        <activity android:name=".ResetPhoneActivity" />
        <activity android:name=".MakeTeamActivity" />
        <activity android:name=".CopyRightActivity" />
        <activity android:name=".ResetPasswordActivity" />
        <activity android:name=".SearchActivity" />
        <activity android:name=".MyCollectionsActivity" />
        <activity android:name=".MyRecordsActivity" />
        <activity android:name=".AddNotesActivity"></activity>
    </application>

</manifest>