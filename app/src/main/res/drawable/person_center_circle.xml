<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
android:shape="oval">

<solid android:color="#CCCCCC"/>
 <!--圆角 -->
<corners android:radius="360dp" />
 <!--边距 -->
<padding
    android:bottom="15dp"
    android:left="15dp"
    android:right="15dp"
    android:top="15dp" />

 <!--大小 -->
<size android:width="92dp"
    android:height="92dp" />
 <!--边框宽度-->
<stroke
    android:width="2dp"
    android:color="#4990E2"
    android:dashWidth="0dp"/>
</shape>