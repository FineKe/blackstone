<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lay_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#3376c5"
    >

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:background="@color/bootstrap_alert_cross_default"
        android:foregroundGravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375"
        android:id="@+id/bootstrapWell">

        <LinearLayout

            android:layout_width="258dp"
            android:layout_height="121dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapEditText

                android:id="@+id/user_name_bootstrapEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:layout_marginBottom="5dp"
                android:hint="phone"
                android:textColorHint="@color/bootstrap_alert_cross_default"/>

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/password_bootstrapEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                app:bootstrapBrand="info"
                app:roundedCorners="true"
                android:hint="password"
                android:textColorHint="@color/bootstrap_alert_cross_default"/>
        </LinearLayout>


    </com.beardedhen.androidbootstrap.BootstrapWell>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/regist_bootstrapButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/bootstrapWell"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="5dp"
        android:text="注册账号"
        app:roundedCorners="true"
        app:bootstrapBrand="info"
        app:showOutline="true"/>
    <com.beardedhen.androidbootstrap.BootstrapButton

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reset_password_bootstrapButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:text="忘记密码"
        android:typeface="monospace"
        app:buttonMode="regular"
        app:bootstrapBrand="info"
        app:roundedCorners="true"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/bootstrapWell"
        app:showOutline="true"/>
<com.beardedhen.androidbootstrap.BootstrapButton
    android:id="@+id/login_bootstrapButton"
    android:layout_width="139dp"
    android:layout_height="31dp"
    android:text="登录"
    app:roundedCorners="true"
    app:bootstrapBrand="success"
    android:layout_marginLeft="8dp"
    app:layout_constraintLeft_toLeftOf="parent"
    android:layout_marginRight="8dp"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/bootstrapWell"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_marginBottom="8dp"
    app:layout_constraintVertical_bias="0.089" />

</android.support.constraint.ConstraintLayout>