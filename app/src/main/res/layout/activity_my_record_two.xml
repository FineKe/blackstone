<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <com.kefan.blackstone.widget.HeaderBar
        android:id="@+id/headerbar_record_activity"
        android:background="@color/global_bg_clolor"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:leftText="返回"
        app:leftIcon="@mipmap/action_back"
        app:centerText="当天记录"
        app:rightText="修改"
        app:left_margin="16dp"
        app:right_margin="16dp">

    </com.kefan.blackstone.widget.HeaderBar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/activity_myrecord_two_text_view_date"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="2017年7月4日"
            android:textSize="16sp"
            android:textColor="#000"
            android:gravity="left|center"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="#979797"/>
        <ExpandableListView
            android:id="@+id/activity_myrecord_two_expand_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawSelectorOnTop="false"/>
    </LinearLayout>

</LinearLayout>
