<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_my_records_list_view_item_linear_layout_record"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/activity_my_records_list_view_item_text_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="7dp"
            android:text="2017年7月4日"
            android:textColor="#000"
            android:textSize="16sp"
            tools:ignore="HardcodedText,RtlHardcoded" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/activity_my_records_list_view_item_text_view_amphibia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="两栖类2种"
                android:textColor="#9B9B9B"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/activity_my_records_list_view_item_text_view_reptiles"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="爬行类2种"
                android:textColor="#9B9B9B"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/activity_my_records_list_view_item_text_view_bird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="鸟类7种"
                android:textColor="#9B9B9B"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />

            <TextView
                android:id="@+id/activity_my_records_list_view_item_text_view_insect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="昆虫1个目"
                android:textColor="#9B9B9B"
                android:textSize="13sp"
                tools:ignore="HardcodedText,RtlHardcoded" />
        </LinearLayout>
        <!--<View

            android:layout_width="358dp"
            android:layout_height="0.3dp"
            android:background="#9B9B9B"
            android:layout_gravity="right|bottom"

            />-->


    </LinearLayout>

    <TextView
        android:id="@+id/activity_my_records_list_view_item_text_view_record_delete"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@mipmap/delete" />


</LinearLayout>