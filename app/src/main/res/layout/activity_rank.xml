<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.activity.RankActivity">

    <com.kefan.blackstone.widget.HeaderBar
        android:id="@+id/headerbar_rank_activity"
        android:layout_width="match_parent"
        android:background="@color/global_bg_clolor"
        android:layout_height="40dp"
        app:leftIcon="@mipmap/action_back"
        app:leftText="返回"
        app:leftTextSize="10sp"
        app:left_margin="16dp">

    </com.kefan.blackstone.widget.HeaderBar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_rank_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>