<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e1d0"
    android:orientation="vertical"
    tools:context="com.hdu.myship.blackstone.RegisterActivity">

    <include layout="@layout/register_title_bar">

    </include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="学号"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_student_number"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:background="#ffff"
            android:hint="请输入你的学号"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="姓名"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_name"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="请输入你的真实姓名"
            android:inputType="text"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="性别"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_sex"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="性别"
            android:inputType="text"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="邮箱"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_email"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="请输入邮箱"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="密码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_password"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="请输入至少6位数密码"
            android:inputType="textPassword"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="确认密码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_confirm"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="手机号码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_phone"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="请输入11位手机号码"
            android:inputType="phone"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_marginTop="46px"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="46px"
            android:text="验证码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_verification_code"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:hint="请输入6位数验证码"
            android:inputType="number"
            android:singleLine="true"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="bottom"
        android:layout_marginBottom="66px"
        android:layout_weight="1"

        android:orientation="horizontal">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/register_bootStrap_button_send_code"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_weight="1"
            android:text="点击发送验证码"
            app:bootstrapBrand="primary"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/register_bootStrap_button_submit"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_marginLeft="46px"
            android:layout_marginRight="46px"
            android:layout_weight="1"
            android:text="注册账号"
            app:bootstrapBrand="primary"
            app:roundedCorners="true" />
    </LinearLayout>
</LinearLayout>
