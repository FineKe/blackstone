<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context="com.hdu.myship.blackstone.RegisterActivity">

    <include
        layout="@layout/register_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include8"
        app:layout_constraintHorizontal_bias="0.0">

    </include>

    <LinearLayout
        android:id="@+id/linearLayout10"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="学号"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_student_number"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#ffff"
            android:hint="请输入你的学号"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout11"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="姓名"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="请输入你的真实姓名"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout12"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout11">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"

            android:layout_marginRight="9dp"
            android:text="性别"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_sex"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:hint="性别"
            android:inputType="text"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout13"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="密码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入至少6位数密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="确认密码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_confirm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="再次输入密码"
            android:inputType="textPassword"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout16"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout15">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="验证码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_verification_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入6位数验证码"
            android:inputType="number"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/register_bootStrap_button_send_code"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:text="点击发送验证码"
            android:textSize="20sp"
            app:bootstrapBrand="primary"
            app:roundedCorners="true" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/register_bootStrap_button_submit"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="注册账号"
            android:textSize="20sp"
            app:bootstrapBrand="primary"
            app:roundedCorners="true" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout15"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="14dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout14">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="9dp"
            android:text="手机号码"
            android:textColor="#000"
            android:textSize="20sp" />

        <com.beardedhen.androidbootstrap.BootstrapEditText

            android:id="@+id/register_bootStrap_editText_phone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入11位手机号码"
            android:inputType="phone"
            android:singleLine="true"
            android:textSize="20sp"
            app:roundedCorners="true" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
