<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3376c5"
    tools:context="com.hdu.myship.blackstone.register_activity">

    <com.beardedhen.androidbootstrap.BootstrapWell
        android:id="@+id/bootstrapWell2"
        android:layout_width="290dp"
        android:layout_height="180dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/bootstrap_gray_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.39999998"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="129dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/register_user_name_bootstrapEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="name"
                android:inputType="text"
                android:maxLength="20"
                android:maxLines="1"
                app:bootstrapBrand="primary"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/register_user_pwd_bootstrapEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="password"
                android:inputType="textPassword"
                android:maxLength="20"
                android:maxLines="1"
                app:bootstrapBrand="primary"
                app:roundedCorners="true" />

            <com.beardedhen.androidbootstrap.BootstrapEditText
                android:id="@+id/register_get_user_phone_bootstrapEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:hint="phoneNumber"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                app:bootstrapBrand="primary"
                app:roundedCorners="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/get_verifyCode_bootstrapEdit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.75"
                    android:inputType="number"
                    android:maxLength="6"
                    android:maxLines="1"
                    app:bootstrapBrand="primary"
                    app:roundedCorners="true" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/get_verifyCode_bootstrapButton"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.25"
                    android:gravity="center_horizontal"
                    android:text="获取验证码"
                    app:bootstrapBrand="success"
                    app:roundedCorners="true" />
            </LinearLayout>
        </LinearLayout>


    </com.beardedhen.androidbootstrap.BootstrapWell>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:id="@+id/regester_submit_bootstrapButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="提交"
        app:bootstrapBrand="secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bootstrapWell2"
        app:layout_constraintVertical_bias="0.100000024"
        app:roundedCorners="true"
        app:showOutline="false"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="312dp" />
</android.support.constraint.ConstraintLayout>
