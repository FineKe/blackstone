<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="275dp"
    android:layout_height="120dp"
    android:background="@drawable/dialog_background"
    android:orientation="vertical"
    >

    <TextView
        android:id="@+id/T1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="106dp"
        android:text="无法登录"
        android:textSize="16sp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/view2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="1.0"/>
    <TextView
        android:id="@+id/T2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你输入的账号或密码错误"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_marginRight="50dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="@+id/view2"
        android:layout_marginBottom="61dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.79"/>



    <View
        android:layout_width="wrap_content"
        android:layout_height="0.8dp"
        android:background="#acacac"
        android:id="@+id/view"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="43dp"/>

    <TextView
        android:id="@+id/error_login_dialog_forget"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="108dp"
        android:gravity="center"
        android:text="忘记密码"
        android:textColor="#4990E2"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.296"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/error_login_dialog_inputAgain"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

    <View

        android:id="@+id/view2"
        android:layout_width="0.8dp"
        android:layout_height="55dp"
        android:background="#acacac"
        tools:layout_conversion_absoluteHeight="43dp"
        tools:layout_conversion_absoluteWidth="1dp"
        tools:layout_conversion_absoluteX="137dp"
        tools:layout_conversion_absoluteY="116dp"
        app:layout_constraintRight_toLeftOf="@+id/error_login_dialog_inputAgain"
        android:layout_marginRight="12dp"
        app:layout_constraintLeft_toRightOf="@+id/error_login_dialog_forget"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="76dp"
        app:layout_constraintHorizontal_bias="0.666"/>

    <TextView
        android:id="@+id/error_login_dialog_inputAgain"
        android:layout_width="86dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="重新输入"
        android:textColor="#4990E2"
        android:textSize="16sp"
        tools:layout_conversion_absoluteHeight="43dp"
        tools:layout_conversion_absoluteWidth="137dp"
        tools:layout_conversion_absoluteX="138dp"
        tools:layout_conversion_absoluteY="116dp"
        android:layout_marginLeft="157dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="1.0"/>

</android.support.constraint.ConstraintLayout>