<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_item_view_recycle_view_rank_activity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_rank_item_view_recycle_view_rank_activity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="1"
        android:textColor="@color/global_bg_clolor"
        android:textSize="28sp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="16dp"/>

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/iv_icon_item_view_recycle_view_rank_activity"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/person_center"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_rank_item_view_recycle_view_rank_activity"
        android:layout_marginLeft="20dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_icon_item_view_recycle_view_rank_activity"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/tv_username_item_view_recycle_view_rank_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘雨玹"
            android:textColor="@color/global_text_color_gray"/>

        <TextView
            android:id="@+id/tv_score_item_view_recycle_view_rank_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="得分235分"
            android:textColor="@color/global_text_color_gray"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_ratio_item_view_recycle_view_rank_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="88%正确率"
        android:textColor="@color/global_text_color_gray"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"/>

    <View
        android:id="@+id/v_spilt_line_item_view_recycle_view_rank_activity"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/virtual_line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>