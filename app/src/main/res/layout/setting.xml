<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff">

    <include
        layout="@layout/setting_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:id="@+id/setting_linearlayout_version_update"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版本更新"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:text="2.0"
            android:textColor="@color/font_color" />
    </LinearLayout>

    <include layout="@layout/setting_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/setting_linearlayout_account_and_security"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="账号与安全"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/action_back" />
    </LinearLayout>

    <include layout="@layout/setting_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/setting_linearlayout_copyright"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="版权信息"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/action_back" />
    </LinearLayout>

    <include layout="@layout/setting_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/setting_linearlayout_developing_team"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="制作团队"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/action_back" />
    </LinearLayout>

    <include layout="@layout/setting_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/setting_linearlayout_suggestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="21dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="给我们建议"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:src="@mipmap/action_back" />

    </LinearLayout>


    <include layout="@layout/setting_divider_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

    </LinearLayout>
</LinearLayout>