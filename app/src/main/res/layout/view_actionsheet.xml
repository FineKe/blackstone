<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"

               >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/dialog_background"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="center"
        android:minHeight="42dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="更换照片"
        android:textColor="#000"
        android:textSize="16sp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:background="#acacac"
            android:id="@+id/view1"/>

        <TextView
            android:id="@+id/dialog_change_picture_text_view_delete_picture"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:minHeight="42dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="删除现有照片"
            android:textColor="@color/mycolor"
            android:textSize="16sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:background="#acacac"
            android:id="@+id/view2"/>

        <TextView
            android:id="@+id/dialog_change_picture_text_view_choose_picture"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:minHeight="42dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="从相册中选择"
            android:textColor="@color/mycolor"
            android:textSize="16sp" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="0.8dp"
            android:background="#acacac"
            android:id="@+id/view3"/>

        <TextView
            android:id="@+id/dialog_change_picture_text_view_take_photo"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center"
            android:minHeight="42dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="拍照"
            android:textColor="@color/mycolor"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/dialog_change_picture_text_view_action_cancel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/mycolor"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/lLayout_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    </LinearLayout>

</LinearLayout>